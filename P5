//Write a C++ program to demonstrate use of this pointer.

#include<iostream>

using namespace std;

class add
{
    private:
        int a,b;
    public:
        void set(int a,int b)
        {
            this->a=a;
            this->b=b;
        }
        
        void display()
        {
            cout<<"The value of a is:"<<a<<endl;
            cout<<"The value of b is:"<<b<<endl;
            cout<<"The sum of both is:"<<a+b<<endl;
        }
};

int main()
{
    cout<<"Purohit Akruti K."<<endl;
    cout<<"220130318033"<<endl;
    add a1;
    a1.set(12,56);
    a1.display();
    
    return 0;
}
